{
  "compilerOptions": {
    "target": "esnext",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "out": "./tempTypes",
    "rootDir": "./src",
    "lib": ["es2015", "dom"],
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": ["**/*.spec.tsx", "**/*.stories.tsx"],
  "include": ["src/**/*.tsx"]
}
